# Shared compiler and linker flags used across Avrix
# Imported by subdirs via `subdir('build_flags')`

common_cflags = [
  '-pipe',
  '-ffunction-sections',
  '-fdata-sections',
  '-fno-common',
  '-Os',
  '-Wall',
  '-Wextra',
  '-Wpedantic',
  '-std=c23'
]

# Linker flags may be extended by specific targets
common_ldflags = [
  '-Wl,--gc-sections'
]
